

<div class="style-body-pages">
  <h2>Create a new book</h2>


  <div class="form-add">
    <div>
      <div class="form-left">
    <form action='/book/create' method='POST' id="add">      
      
        <label for="title-form">Book Name</label>
        <input id='title-form' name='bookTitle' type='text' value="{{singleBook.title}}"> 

        <label for="author-input">Book Author</label>
        <input id='author-input' name='author' type='text' value="{{#each singleBook.authors}} {{this}},{{/each}}"> 

        <label for="description-input">Book description</label>
        <textarea name="description" id="cdescription-input" form="add" placeholder='Insert your comment about the book...'>{{singleBook.description}}</textarea>
        <label for="comment-input"> Comment</label>     
        <textarea name="bookComment" id="comment-input" form="add" placeholder='Insert your comment about the book...'></textarea>

        <label for="">Images from your book</label>
        <input type='file' name='picture' id='picture-input' accept='image/png, image/jpeg'> 


        <label for='thumb-input'></label>
        <input type='hidden' name='thumb' id='thumb-input' value="{{singleBook.smallThumbnail}}">


        <label for='lat-input'></label>
        <input type='hidden' name='latitude' id='latitude-input'>

        <label for='lng-input'></label>
        <input type='hidden' name='longitude' id='longitude-input'>

        </div>
     
      <div class="form-right">

        <h3>Where</h3>
        <div id="map-view"></div>
      </div>
       </div>
        <button type='submit'>Submit book</button>
    </form>
    
    </div>
  </div>
   
</div>




  <script src='/scripts/mapsCreate.js'></script>
  <script src='https://maps.googleapis.com/maps/api/js?key=AIzaSyCvNd635sKmUOsRjS--aKxAHfNu9bwD7QU&callback=initMap'></script>