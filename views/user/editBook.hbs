Edit your book



<form action='/book/{{result._id}}/edit' method='POST'>

  
    <label for="title-form">Book Name</label>
    <input id='title-form' name='bookTitle' type='text' value="{{result.bookTitle}}"> 

    <label for="author-input">Book Author</label>
    <input id='author-input' name='author' type='text' value="{{result.author}}"> 

    <label for="description-input"> description</label>
    <input id='description-input' name='description' type='text' value="{{result.description}}"> 

    <label for="comment-input"> comment</label>
    <input id='comment-input' name='bookComment' type='text-area'  value="{{result.bookComment}}" placeholder='Insert your comment about the book...'> 

    <label for="">Images from your book</label>
    <input type='file' name='picture' id='picture-input' accept='image/png, image/jpeg'> 


    <label for='thumb-input'></label>
    <input type='hidden' name='thumb' id='thumb-input' value="{{result.smallThumbnail}}">


    <label for='lat-input'></label>
    <input type='hidden' name='latitude' id='latitude-input'>

    <label for='lng-input'></label>
    <input type='hidden' name='longitude' id='longitude-input'>

    
    <button type='submit'>Submit book</button>
</form>

