<div class="style-body-pages">
  <div class="sign-up">
    <div>
      <form action="/authentication/sign-up" method="POST">
        <label for="input-name-sign-up">Name</label>
        <input type="text" id="input-name-sign-up" name="name" placeholder="Your Name" />
        <label for="input-email-sign-up">Email</label>
        <input type="email" id="input-email-sign-up" name="email" placeholder="Your Email" />
        <label for="input-password-sign-up">Password</label>
        <input type="password" name="password" id="input-password-sign-up" placeholder="A Strong Password" />
        <button>Sign Up</button>
      </form>    
    </div>
  </div>
</div>
